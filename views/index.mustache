<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mystery Word</title>
    <link rel="stylesheet" href="/css/master.css">
  </head>
  <body>

    <header>
      <h3>Mystery Word</h3>
      <div id="guesses-left">
        <!-- INSERT GUESSES LEFT AS <h3> -->
        <h3>You have {#} guesses left</h3>
      </div>
    </header>

    <main>
      <div id="mystery-word">
        <!-- INSERT UNDERSCORES || LETTERS AS <h3> -->

      </div>

      <form id="user-input-submit" action="/" method="post">
        <input type="text" name="guess" value="">
        <input type="submit" name="make-guess" value="Make A Guess!">
      </form>

      <div id="letters-guessed-wrapper">
        <h3>Letters guessed: </h3>
        <div class="letters-guessed">
          <!-- INSERT LETTERS AS <p> -->

        </div>
      </div>
    </main>

    <script src="/js/client.js" charset="utf-8"></script>
  </body>
</html>
